<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Назва_товару %>
    <%= form.text_field :name, id: :product_name %>
  </div>

  <div class="field">
    <%= form.label :Розмір_товару %>
    <%= form.number_field :size, id: :product_size %>
  </div>

  <div class="field">
    <%= form.label :Ціна_по_якій_купуємо_товар %>
    <%= form.text_field :price_in, id: :product_price_in %>
  </div>

  <div class="field">
    <%= form.label :Ціна_по_якій_продаємо_товар %>
    <%= form.number_field :price_out, id: :product_price_out %>
  </div>

  <div class="field">
    <%= form.label :Дата_викладення_товару %>
    <%= form.date_select :date_in, id: :product_date_in %>
  </div>

  <div class="field">
    <%= form.label :Знижка_на_товар %>
    <%= form.number_field :sale, id: :product_sale %>
  </div>

  <div class="field">
    <%= form.label :Теги %>
    <%= form.text_field :category_list %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
